{% extends 'base.html.twig' %}

{% block title %}Réinitialisation{% endblock %}

{% block body %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="p-3 mb-2 bg-{{ label }} text-white">
            <p>{{ message }}</p>
        </div>
    {% endfor %}
{% endfor %}
<h1 class="h3 mb-3">Réinitialisation du mot de passe</h1>
<form method="post">
    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Votre email" required autofocus>
    <button class="btn btn-lg btn-primary" type="submit">Envoyer</button>
 </form>
{% endblock %}
