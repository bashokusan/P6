{% extends 'base.html.twig' %}

{% block title %}Réinitialisation{% endblock %}

{% block body %}
<div class="form">
    <h1 class="h3 mb-3">Réinitialisation du mot de passe</h1>
    <form method="post">
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Votre email" required autofocus>
        <button class="btn btn-primary mt-3" type="submit">Envoyer</button>
     </form>
</div>

{% endblock %}
