{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="form">
    <h1>Incrivez-vous</h1>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo, {'attr': {'placeholder': 'John Doe'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'placeholder': 'john@doe.com'}}) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
    <p class="mt-3">Un mail de confirmation vous sera envoyé à l'adresse email indiquée.</p>
</div>

{% endblock %}
