{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les tricks</h1>

    <div class="container">
        <div class="row flex">
            {% for trick in tricks %}
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <em>{{ trick.category.name }}</em>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ trick.name }}</h5>
                            <a href="{{ path('trick_detail', {'id': trick.id})}}" class="btn btn-primary">Détails</a>
                        </div>
                        <div class="card-footer text-muted">
                            <em>Créé le {{ trick.createdAt | date('d/m/Y') }} par {{ trick.author.pseudo }}</em>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

</div>
{% endblock %}
