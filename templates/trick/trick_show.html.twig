{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ trick.name }}{% endblock %}

{% block body %}
    <div class="">
        {% for img in trick.media %}
        <img width="400" src="{{ asset('uploads/media/' ~ img.src) }}" alt="">
        {% endfor %}
    </div>
    <div>
        <h1>{{ trick.name }}</h1>
        <p>{{ trick.description | nl2br }}</p>
        <em>Posté le {{ trick.createdAt | date('d/m/Y') }} par {{ trick.author.pseudo }}</em>
        <img src="{{ asset('uploads/avatar/' ~ trick.author.avatar) }}" alt="avatar de {{ trick.author.pseudo }}" width="40">
        {% if trick.updatedAt %}
        <em>Mis à jour le {{ trick.updatedAt | date('d/m/Y') }}</em>
        {% endif %}
    </div>
    <div class="mt-4">
        <h2>Commentaires :</h2>
        {% if is_granted('ROLE_USER') %}
            {{ form_start(form) }}
            {{ form_row(form.content) }}
            <button type="submit" class="btn btn-success">Commenter</button>
            {{ form_end(form) }}
        {% else %}
            <p>Vous devez être connecté pour poster un commentaire</p>
            <a class="btn btn-primary" href="{{ path('app_login') }}"> Se connecter</a>
        {% endif %}

        {% for comment in trick.comments %}
            <div class="media mt-4">
                <img src="{{ asset('uploads/avatar/' ~ comment.author.avatar) }}" class="mr-3" alt="avatar de {{ comment.author.pseudo }}" width="50">
                <div class="media-body">
                <h5 class="mt-0">{{ comment.author.pseudo }} le {{ comment.createdAt | date('d/m/Y') }}</h5>
                {{ comment.content | nl2br }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
