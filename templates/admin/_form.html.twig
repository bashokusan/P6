    </div>
    <div class="form_submit col-md-2 col-xs-8">
	       <button type="submit" class="btn btn-primary">{{ button|default('Enregister')}}</button>
    </div>
</div>

{{ form_end(form) }}

{% block javascript %}
<script type="text/javascript">

// setup an "add an item" link
var $addItemLink = $("<a href='#' class='add_item_link btn btn-warning'><i class='fa fa-plus' aria-hidden='true'></i></a>");
var $newLinkLi = $('<div></div>').append($addItemLink);

jQuery(document).ready(function() {
    // Get the ul that holds the collection of items
    var $collectionHolder = $('div.image');
    $collectionHolder.find('div').each(function() {
        addItemFormDeleteLink($(this));
    });
    // add the "add an item" anchor and li to the items ul
    $collectionHolder.append($newLinkLi);
    // count the current form inputs we have (e.g. 2), use that as the new
    // index when inserting a new item (e.g. 2)
    $collectionHolder.data('index', $collectionHolder.find(':input').length);

    $addItemLink.on('click', function(e) {
        // prevent the link from creating a "#" on the URL
        e.preventDefault();
        // add a new item form (see code block below)
        addImgForm($collectionHolder, $newLinkLi);
    });
});

function addImgForm($collectionHolder, $newLinkLi) {
    // Get the data-prototype explained earlier
    var prototype = $collectionHolder.data('prototype');
    // get the new index
    var index = $collectionHolder.data('index');
    // Replace '$$name$$' in the prototype's HTML to
    // instead be a number based on how many items we have
    var newForm = prototype.replace(/__name__/g, index);
    // increase the index with one for the next item
    $collectionHolder.data('index', index + 1);
    // Display the form in the page in an li, before the "Add an item" link li
    var $newFormLi = $('<div></div>').append(newForm);

    // also add a remove button, just for this example
    $newFormLi.append("<button type='button' class='btn btn-danger btn-xs remove-item'><i class='fa fa-times' aria-hidden='true'></i></button>");
    $newLinkLi.before($newFormLi);
    // handle the removal, just for this example
    $('.remove-item').click(function(e) {
        e.preventDefault();
        $(this).parent().remove();
        return false;
    });
}

function addItemFormDeleteLink($itemFormLi) {
    var $removeFormButton = $("<button type='button' class='btn btn-danger btn-xs remove-item'><i class='fa fa-times' aria-hidden='true'></i></button>");
    $itemFormLi.append($removeFormButton);

    $removeFormButton.on('click', function(e) {
        // remove the li for the item form
        $itemFormLi.remove();
    });
}

</script>
{% endblock %}
