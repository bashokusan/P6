<h3>Images</h3>
    <div class="image" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
        {% for img in form.images %}
            <div>{{ img.vars.value.src }}</div>
            <div style="display:none">{{ form_row(img.file) }}</div>
            <div style="display:none">{{ form_row(img.alt) }}</div>
        {% endfor %}
    </div>

<h3>Videos</h3>
    <div class="video" data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}">
        {% for vid in form.videos %}
            <div><a href="{{ vid.vars.value.url }}">{{ vid.vars.value.url }}</a></div>
            <div style="display:none">{{ form_row(vid.url) }}</div>
        {% endfor %}
    </div>

