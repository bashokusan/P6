{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Vos tricks</h1>
    <a href="{{ path('trick_admin_new') }}" class="btn btn-danger my-3">Créer un nouveau trick</a>
    <div class="mb-5">
          <div class="row flex">
              {% for trick in tricks %}
                  <div class="col-lg-4">
                      <div class="card mb-3">
                          <div class="card-header">
                              <em>{{ trick.category.name }}</em>
                          </div>
                          <div class="card-body">
                              <h5 class="card-title">{{ trick.name }}</h5>
                              <a href="{{ path('trick_admin_show', {'id': trick.id})}}" class="btn btn-primary">Détails</a>
                          </div>
                          <div class="card-footer text-muted">
                              <em>Créé le {{ trick.createdAt | date('d/m/Y') }}</em>
                              {% if trick.updatedAt %}
                              <em>Mis à jour le {{ trick.updatedAt | date('d/m/Y') }}</em>
                              {% endif %}
                              {{ include('admin/_action.html.twig') }}
                          </div>
                      </div>
                  </div>
              {% endfor %}
          </div>
      </div>
</div>
{% endblock %}
